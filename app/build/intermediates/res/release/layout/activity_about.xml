<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

        <TextView
                android:id="@+id/aboutText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="Gower Tides"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_weight="1.0"/>

        <TextView
                android:id="@+id/versionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/aboutText"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="Version: "
                android:textAppearance="?android:attr/textAppearanceSmall"
                />
        <TextView
                android:id="@+id/versionText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aboutText"
                android:layout_toRightOf="@+id/versionText"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall"
                />

        <TextView
                android:id="@+id/licenseOverview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/versionText"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="License: GNU General Public License (v3)"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />



        <TextView
                android:id="@+id/licenseText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/licenseOverview"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="Copyright 2013-2015 Will Webberley.
This program is distributed in the hope that it will be useful, but WITHOUT ANY WARRANTY; without even the implied warranty of MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE. See the GNU General Public License for more details."
                android:textAppearance="?android:attr/textAppearanceSmall"
                />


        <Button
                android:id="@+id/sourceButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/licenseText"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:onClick="goToSource"
                android:text="Project source"
                android:layout_weight=".50"/>

        <Button
                android:id="@+id/licenseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/licenseText"
                android:layout_toRightOf="@+id/sourceButton"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:onClick="goToLicense"
                android:text="View license"
                android:layout_weight=".50"/>

        <View
                android:id="@+id/developerDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#bbb"
                android:layout_below="@+id/sourceButton"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                />


        <TextView
                android:id="@+id/developerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/developerDivider"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="Developer"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_weight="1.0"/>

        <TextView
                android:id="@+id/authorText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/developerText"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="Will Webberley (\@flyingSparx)"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_weight="1.0"/>


        <Button
                android:id="@+id/helpButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/authorText"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:onClick="goToHelp"
                android:text="Contact"
                android:layout_weight=".50"/>



        <ImageView
                android:id="@+id/imageView1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:layout_below="@+id/authorText"
                android:layout_toRightOf="@+id/helpButton"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/twitter"
                android:onClick="openTwitter"/>



        <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#bbb"
                android:layout_below="@+id/imageView1"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                />

        <TextView
                android:id="@+id/creditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/divider2"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="Credits"
                android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
                android:id="@+id/weatherCredit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/creditText"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="Weather data is provided by World Weather Online's public API."
                android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
                android:id="@+id/weatherButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/weatherCredit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                style="?android:attr/buttonStyleSmall"
                android:onClick="goToWeather"
                android:text="World Weather Online" />

        <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd"
                android:layout_below="@+id/weatherButton"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                />

        <TextView
                android:id="@+id/surfCredit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider3"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="Surf data is provided by Magic Seaweed."
                android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageButton
                android:id="@+id/mswButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/surfCredit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:onClick="goToMSW"
                android:text="World Weather Online"
                android:src="@drawable/msw"/>

        <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd"
                android:layout_below="@+id/mswButton"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                />

        <TextView
                android:id="@+id/weatherIconCredit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/divider4"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="Weather icons are from the Novacons set by user digitalchet."
                android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
                android:id="@+id/weatherIconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/weatherIconCredit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:onClick="goToWeatherIcon"
                style="?android:attr/buttonStyleSmall"
                android:text="Novacon Icons on DeviantART" />

        <View
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd"
                android:layout_below="@+id/weatherIconButton"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                />

        <TextView
                android:id="@+id/iconCredit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/divider5"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="Weather information icons are from the Climacons set by Adam Whitcroft."
                android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
                android:id="@+id/iconCreditButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iconCredit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:onClick="goToIcon"
                style="?android:attr/buttonStyleSmall"
                android:text="Climacons web page" />

        <View
                android:id="@+id/divider6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd"
                android:layout_below="@+id/iconCreditButton"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                />

        <TextView
                android:id="@+id/batchCredit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/divider6"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="Surf information icons are from the Batch set by Adam Whitcroft."
                android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
                android:id="@+id/batchCreditButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/batchCredit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:onClick="goToBatch"
                style="?android:attr/buttonStyleSmall"
                android:text="Batch web page"/>

    </RelativeLayout>
</ScrollView>
