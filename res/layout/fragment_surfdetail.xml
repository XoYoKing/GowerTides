<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/msw_icon"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:textColor="#aaaaaa"
            android:text="09:00"
            android:textAppearance="?android:attr/textAppearanceMedium" />


    <!-- SURF INFO -->
    <ImageView
            android:id="@+id/wave_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/time"
            android:scaleType="fitXY"
            android:src="@drawable/wave"
            />

    <TextView
            android:id="@+id/surf_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time"
            android:layout_toRightOf="@+id/wave_icon"
            android:layout_marginLeft="5dp"
            android:textColor="#aaaaaa"
            android:text="1-2ft"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
            android:id="@+id/abs_min_surf_size_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/surf_size"
            android:layout_marginLeft="10dp"
            android:textColor="#222"
            android:text="Abs. min.:"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
            android:id="@+id/abs_min_surf_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/surf_size"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/abs_min_surf_size_title"
            android:textColor="#aaaaaa"
            android:text="1 ft"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
            android:id="@+id/abs_max_surf_size_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/abs_min_surf_size"
            android:layout_marginLeft="10dp"
            android:textColor="#222"
            android:text="Abs. max.:"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
            android:id="@+id/abs_max_surf_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/abs_min_surf_size"
            android:layout_toRightOf="@+id/abs_max_surf_size_title"
            android:layout_marginLeft="10dp"
            android:textColor="#aaaaaa"
            android:text="3 ft"
            android:textAppearance="?android:attr/textAppearanceSmall" />


    <View
        android:id="@+id/vr1"
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@+id/abs_max_surf_size"
        android:layout_above="@+id/image_scroller"
        android:layout_below="@+id/time"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#CCCCCC"/>


    <!-- SWELL STUFF -->

    <TextView
        android:id="@+id/swell_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/vr1"
        android:layout_below="@+id/time"
        android:text="SWELL" />


    <ImageView
            android:id="@+id/swell_direction_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/swell_title"
            android:layout_toRightOf="@+id/vr1"
            android:scaleType="fitXY"
            android:src="@drawable/compass"
            />

    <TextView
        android:id="@+id/swell_direction_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/swell_direction_icon"
        android:layout_below="@+id/swell_title"
        android:text="SSW"
        android:textColor="#AAAAAA"
        android:layout_marginTop="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
       />

    <TextView
            android:id="@+id/swell_direction_degrees"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/swell_direction_text"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/swell_title"
            android:text="(134)"
            android:textColor="#AAAAAA"
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />

    <ImageView
            android:id="@+id/swell_direction_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/swell_title"
            android:layout_toRightOf="@+id/swell_direction_degrees"
            android:layout_marginLeft="7dp"
            android:scaleType="fitXY"
            android:src="@drawable/arrow" />

    <ImageView
            android:id="@+id/period_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/swell_direction_icon"
            android:layout_toRightOf="@+id/vr1"
            android:scaleType="fitXY"
            android:src="@drawable/stopwatch"
           />

    <TextView
            android:id="@+id/period_title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/period_icon"
            android:layout_below="@+id/swell_direction_icon"
            android:layout_marginRight="5dp"
            android:text="PERIOD:"
            android:textColor="#222"
            android:layout_marginTop="7dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />

    <TextView
            android:id="@+id/period_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/period_title"
            android:layout_below="@+id/swell_direction_icon"
            android:text="8s"
            android:textColor="#AAAAAA"
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

    <ImageView
            android:id="@+id/height_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/period_icon"
            android:layout_toRightOf="@+id/vr1"
            android:scaleType="fitXY"
            android:src="@drawable/size"
            />

    <TextView
            android:id="@+id/height_title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/height_icon"
            android:layout_below="@+id/period_icon"
            android:layout_marginRight="5dp"
            android:text="HEIGHT:"
            android:textColor="#222"
            android:layout_marginTop="7dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />

    <TextView
            android:id="@+id/height_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/height_title"
            android:layout_below="@+id/period_icon"
            android:text="1.5m"
            android:textColor="#AAAAAA"
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

    <!-- CHART IMAGES -->
    <HorizontalScrollView
        android:id="@+id/image_scroller"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/height_icon"
        >

        <LinearLayout
            android:id="@+id/images"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/wind_image"
                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/sunrise"
                />

            <ImageView
                    android:id="@+id/pressure_image"
                    android:layout_marginRight="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/sunrise"
                    />

            <ImageView
                    android:id="@+id/sst_image"
                    android:layout_marginRight="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/sunrise"
                    />

        </LinearLayout>
     </HorizontalScrollView>

    <View
        android:id="@+id/hr1"
        android:layout_height="2dp"
        android:layout_width="fill_parent"
        android:layout_below="@+id/image_scroller"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>
</RelativeLayout>